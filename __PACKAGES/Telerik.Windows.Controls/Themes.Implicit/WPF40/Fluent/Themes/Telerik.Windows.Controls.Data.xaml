    <ControlTemplate x:Key="NumericElementsPresenterTemplate" TargetType="dataPager:NumericElementsPresenter">
        <ItemsControl ItemsSource="{Binding Pages}" SnapsToDevicePixels="True" FocusVisualStyle="{x:Null}" IsTabStop="False">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal"/>
